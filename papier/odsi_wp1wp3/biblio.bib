	issn = {978-1-4503-4270-4},
	keywords = {home router nat/firewall,smart-phone malware,upnp},
	pages = {195--200},
	publisher = {ACM Press},
	title = {{Smart-Phones Attacking Smart-Homes}},
	url = {http://dl.acm.org/citation.cfm?doid=2939918.2939925},
