	journal = {Technology in Society},
	pages = {189--198},
	title = {{Kill switches, remote deletion, and intelligent agents: Framing everyday household cybersecurity in the internet of things}},
	url = {https://ac-els-cdn-com.buproxy.univ-lille1.fr/S0160791X17300921/1-s2.0-S0160791X17300921-main.pdf?{\_}tid=c21d9c7e-17d6-11e8-85ad-00000aab0f01{\&}acdnat=1519307367{\_}4035592317d0e792ba85a650e5c7d4a2},
	volume = {51},
